{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": false,
    "strict": true,
    "target": "ES5",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "__test__/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "lib",
    "dist",
    "types"
  ]
}
